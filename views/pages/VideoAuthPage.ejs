    <style>
        .login-form {
            width: 340px;
            margin: 250px auto;
            font-size: 15px;
        }

        .login-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

        .login-form h2 {
            margin: 0 0 15px;
        }

        .form-control,
        .btn {
            min-height: 38px;
            border-radius: 2px;
        }

        .btn {
            font-size: 15px;
            font-weight: bold;
        }
    </style>

</head>

<body>

    <div class="login-form">
        <form id="form" action="/api/auth/user-by-email" method="POST">
            <h2 class="text-center">Log in</h2>
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Email" name="email" required>
            </div>
            <%if (error) { %>
                <p>
                    <%= error %>
                </p>
                <% } %>

            <button class="btn btn-primary btn-block" type="submit">Sign In</button>
        </form>
    </div>


